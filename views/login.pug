extends layout

block content

  div(id="root" style="width: 280px; margin: 40px auto; padding: 10px;")

  script.
    // Construct an instance of Auth0Lock with your clientId and aut0 domain name
    var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}',{ auth: {
          redirectUrl: '#{env.AUTH0_CALLBACK_URL}'
        ,responseType: 'code'
        ,params: {
          scope: 'openid name email picture'
        }
      },
      allowedConnections: ['Username-Password-Authentication'],
      autofocus: true,
      closable: false,
      language: 'es',
      theme: { 
        logo: 'http://icons.iconarchive.com/icons/limav/game-of-thrones/512/Stark-icon.png',
        primaryColor: '#999999'
      },
      allowSignUp: false
      });

    // Show lock's login widget
    lock.show();

